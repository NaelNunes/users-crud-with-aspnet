@page
@model ProjetoCadastroUsuarios.Pages.Clientes.IndexModel;

@{
    ViewData["Title"] = "Lista de Clientes";
}

<h1>Clientes Cadastrados</h1>

<p>
    <a asp-page="Create" class="btn btn-primary">Novo Cliente</a>
</p>

<table class="table">
    <thead>
        <tr>
            <th>
                @Html.DisplayNameFor(model => model.Cliente.FirstOrDefault()!.Nome)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.Cliente.FirstOrDefault()!.Email)
            </th>
            <th></th> </tr>
    </thead>
    <tbody>
        @foreach (var item in Model.Cliente)
        {
            <tr>
                <td>
                    @Html.DisplayFor(modelItem => item.Nome)
                </td>
                <td>
                    @Html.DisplayFor(modelItem => item.Email)
                </td>
                <td>
                    <a asp-page="./Edit" asp-route-id="@item.Id">Editar</a> |
                    <a asp-page="./Details" asp-route-id="@item.Id">Detalhes</a> |
                    <a asp-page="./Delete" asp-route-id="@item.Id">Excluir</a>
                </td>
            </tr>
        }
    </tbody>
</table>