@page
@model ProjetoCadastroUsuarios.Pages.Clientes.DeleteModel

@{
    ViewData["Title"] = "Excluir Cliente";
}

<h1>Excluir Cliente</h1>

<h3>Tem certeza de que deseja excluir este cliente? Esta ação é irreversível.</h3>
<div>
    <h4>Dados do Cliente</h4>
    <hr />
    
    <dl class="row">
        <dt class="col-sm-2">
            @Html.DisplayNameFor(model => model.Cliente.Nome)
        </dt>
        <dd class="col-sm-10">
            @Html.DisplayFor(model => model.Cliente.Nome)
        </dd>
        <dt class="col-sm-2">
            @Html.DisplayNameFor(model => model.Cliente.Email)
        </dt>
        <dd class="col-sm-10">
            @Html.DisplayFor(model => model.Cliente.Email)
        </dd>
    </dl>
    
    <form method="post">
        <input type="hidden" asp-for="Cliente.Id" />
        <input type="submit" value="Confirmar Exclusão" class="btn btn-danger" /> |
        <a asp-page="./Index">Cancelar e Voltar para a Lista</a>
    </form>
</div>